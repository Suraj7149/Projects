#: import utils kivy.utils
<MyLayout>
    id: my_widget

    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height

        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                pos: self.pos
                source: "images/alienware2600.jpg"
                size: self.size

        Accordion: 
            orientation: "vertical"
            size: root.width, root.height


            AccordionItem:
                title: "Panel 1"
                #Label:
                #    text: "Panel 1 Text"
                #    font_size: 32
                Image:
                    source: "images/wonder_woman600.jpg"

            AccordionItem:
                title: "Panel 2"
                #Label:
                #    text: "Panel 2 Text"
                #    font_size: 32
                Image:
                    source: "images/razer600.jpg"
            
            AccordionItem:
                title: "Panel 3"
                #Label:
                #    text: "Panel 3 Text"
                #    font_size: 32
                Image:
                    source: "images/mountain600.jpg"

            AccordionItem:
                title: "Panel 4"
                #Label:
                #    text: "Panel 4 Text"
                #    font_size: 32
                Image:
                    source: "images/oneplus600.jpg"