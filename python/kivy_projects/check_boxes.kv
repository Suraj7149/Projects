#: import utils kivy.utils
<MyLayout>
    id: my_widget

    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height
        
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                pos: self.pos
                source: "images/alienware2600.jpg"
                size: self.size

        Label: 
            text: "Select Pizza Toppings"
            font_size: 32

        GridLayout:
            cols: 2

            Label: 
                text: "Cheese"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Cheese")


            Label: 
                text: "Spices"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Spices")


            Label: 
                text: "Onion"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Onion")

            Label:
                id: output_label
                text: ""
                font_size: 20
