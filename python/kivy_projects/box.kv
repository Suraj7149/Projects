#: import utils kivy.utils
<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size
                source: "images/1_1.jpg"
            
        Label:
            id: name_label
            font_size: 32
            text: "Enter Name:- "
            canvas.before:
                Color:
                    rgba: (0,0,0,.3)
                Rectangle:
                    pos: self.pos
                    size: self.size
            color: (1,0,0,1)

        TextInput:
            id: name_input
            multiline: False
            font_size: 32
            # size_hint: (1,.5)
            background_color: (.5,.5,.5,.3)

            

        Button: 
            text: "Submit"
            font_size: 32
            # size_hint: (1, .5)
            background_color: (.5,.5,.5,.6)
            on_press: root.press()

    