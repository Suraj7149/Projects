#: import utils kivy.utils
<MyLayout>
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height

        #padding: 5
        #spacing: 5
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size
                source: "images/1.jpg"

        Button:
            text: "Hello World"
            size_hint: (0.5, 0.5)
            width: 200
            height: 50

        