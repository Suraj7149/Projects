<MyGridLayout>
    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                id: Name
                multilines:False

            Label:
                text: "Num"
            TextInput:
                id: Num
                multilines:False

            Label:
                text: "Age"
            TextInput:
                id: Age
                multilines:False

        Button: 
            text: "Submit"
            font_size: 32
            on_press: root.press()
