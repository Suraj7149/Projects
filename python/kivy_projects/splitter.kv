<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                pos: self.pos
                source: "images/morning600.jpg"
                size: self.size
        Splitter: 
            sizable_from: "bottom"
            Button:
                text: "hello splitter 1"
                font_size: 32
        
        Splitter: 
            sizable_from: "bottom"
            Label:
                text: "This is some Text!"
                font_size: 32

        Button:
            text: "hello splitter 2"
            font_size: 32
        
        GridLayout:
            cols: 2
            
            Button:
                text: "left"
                font_size: 32
            
            Splitter:
                sizable_from: "left"
                Button:
                    text: "Right"
                    font_size: 32
                