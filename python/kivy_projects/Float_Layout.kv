<Button>
    font_size: 32
    size_hint: (0.3, 0.3)

#: import utils kivy.utils
<MyLayout>
    FloatLayout:
       
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size
                source: "images/1.jpg"
            

        Button: 
            text: "Top Left"
            pos_hint: {"x":0, "top":1}

        Button: 
            text: "Top Right"
            pos_hint: {"x":0.7, "top":1}
        
        Button: 
            text: "Centre"
            pos_hint: {"x":.35, "y":.35}
            

        Button: 
            text: "Bottom Left"
            pos_hint: {"x":0}
        
        Button: 
            text: "Bottom Right"
            pos_hint: {"x":.7, "bottom":1}

       