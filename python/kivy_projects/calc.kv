<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            multiline: True
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 45
            size_hint: (1, .15)
        
        GridLayout:
            cols: 4
            rows: 5

            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "%" 
                on_press: root.add_number("%")
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                on_press: root.clear() 
            Button: 
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: u"\u00AB"
                on_press: root.clear_last()
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "/" 
                on_press: root.add_number("/")
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "7" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(7)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "8" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(8)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "9" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(9)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "x"
                on_press: root.add_number("x") 
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "4" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(4)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "5" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(5)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "6" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(6)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "-" 
                on_press: root.add_number("-")
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "1" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(1)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "2" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(2)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "3" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(3)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "+" 
                on_press: root.add_number("+")
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "+/-" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.negative_positive()
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "0" 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_number(0)
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "." 
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.dot()
            Button: 
                size_hint: (.2, .2)
                font_size: 32
                text: "=" 
                on_press: root.equal()
            
            